<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/info_window_logo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/info_window_nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/info_window_logo"
        android:paddingLeft="5dp"
        android:text="" />


    <TextView
        android:id="@+id/info_window_decano"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_below="@id/info_window_nombre"
        android:layout_toRightOf="@id/info_window_logo"
        android:paddingLeft="5dp"
        android:text="" />

    <TextView
        android:id="@+id/info_window_direccion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_below="@id/info_window_decano"
        android:layout_toRightOf="@id/info_window_logo"
        android:paddingLeft="5dp"
        android:text="" />

    <TextView
        android:id="@+id/info_window_extra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_below="@id/info_window_direccion"
        android:layout_toRightOf="@id/info_window_logo"
        android:paddingLeft="5dp"
        android:text="" />


</RelativeLayout>